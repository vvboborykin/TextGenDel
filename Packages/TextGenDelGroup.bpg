TextDelGenD7.bpl: TextDelGenD7.dpk
  $(DCC)

TextDelGenEditorD7.bpl: TextDelGenEditorD7.dpk
  $(DCC)

Demo.exe: ..\Demo\Demo.dpr
  $(DCC)

TextDelGenFastScript.bpl: TextDelGenFastScript.dpk
